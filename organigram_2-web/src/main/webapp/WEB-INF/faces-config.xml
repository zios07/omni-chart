<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">

	<navigation-rule>
		<from-view-id>Header.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>connexion</from-outcome>
			<to-view-id>connexion.jsp</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>Header.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>inscription</from-outcome>
			<to-view-id>inscription.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

	<converter>
		<converter-id>booleanConverter</converter-id>
		<converter-class>javax.faces.convert.BooleanConverter</converter-class>
	</converter>

</faces-config>
